{
    // ========== MIS CONFIGURACIONES ==========
    "workbench.colorTheme": "Default High Contrast",
    "r.rterm.windows": "C:/Program Files/R/R-4.5.1/bin/R.exe",
    "r.rpath": "C:/Program Files/R/R-4.5.1/bin/R.exe",
    "r.lsp.path": "C:/Program Files/R/R-4.5.1/bin/R.exe",
    "r.plot.useHttpgd": false,
    "security.workspace.trust.untrustedFiles": "open",
    // ========== CONFIGURACIÓN DE IA ==========
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "yaml": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.inlineSuggest.enable": true,
    // ========== RENDIMIENTO ==========
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    // ========== IA Y AUTOCOMPLETADO ==========
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.acceptSuggestionOnCommitCharacter": true,
    // ========== APARIENCIA DEL EDITOR ==========
    "editor.fontSize": 14,
    "editor.fontFamily": "'Cascadia Code', 'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.5,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.wordWrap": "on",
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "boundary",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    // ========== INTERFAZ ==========
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    // ========== TERMINAL ==========
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // ========== ARCHIVOS Y CARPETAS ==========
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/data/raw/**": true,
        "**/data/processed/**": true,
        "**/.Rhistory": true,
        "**/.RData": true,
        "**/.Rproj.user": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    // ========== FORMATEO ==========
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    // ========== MEMORIA Y RENDIMIENTO ==========
    "typescript.tsserver.maxTsServerMemory": 4096,
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    // ========== CONFIGURACIÓN ESPECÍFICA PARA R ==========
    "r.sessionWatcher": true,
    "r.bracketedPaste": true,
    "r.alwaysUseActiveTerminal": true,
    "r.lsp.debug": true,
    "r.rterm.option": [
        "--no-save",
        "--no-restore"
    ],
    // ========== TABULACIÓN INTELIGENTE ==========
    "editor.autoIndent": "full",
    "editor.smartIndent": true,
    "editor.trimAutoWhitespace": true,
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.highlightActiveBracketPair": true,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.autoClosingDelete": "always",
    "editor.autoClosingOvertype": "always",
    // ========== CONFIGURACIÓN JUPYTER/PYTHON ==========
    "jupyter.jupyterServerType": "local",
    "jupyter.askForKernelRestart": false,
    "jupyter.enableNativeInteractiveWindow": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "jupyter.defaultKernel": "python3",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.terminal.activateEnvironment": false,
    // ========== CONFIGURACIÓN JAVA & JAVAFX ==========
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    // RUTA DE SCENE BUILDER (Asegúrate de que esta es correcta para tu PC)
    "java.javafx.sceneBuilder.executable": "C:\\Users\\hecto\\AppData\\Local\\SceneBuilder\\SceneBuilder.exe",
    // ========== CONFIGURACIÓN SQL ==========
    "sql-formatter.uppercase": true,
    "sqltools.useNodeRuntime": false, // <--- ESTO ARREGLA EL ERROR AMARILLO
    "database-client.autoSync": true,
    "mssql.connectionGroups": [
        {
            "name": "ROOT",
            "id": "5B2CC068-73D9-4A16-B93E-EB6BF1B85A52"
        }
    ],
    // ========== ASOCIACIONES DE ARCHIVOS ==========
    "files.associations": {
        "*.rmd": "rmd",
        "*.rdata": "r",
        "*.csv": "csv",
        "*.parquet": "csv",
        "*.sql": "sql",
        "*.java": "java",
        "*.ipynb": "jupyter"
    },
    // ========== CONFIGURACIÓN POR LENGUAJE ==========
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.defaultIndentSize": 4,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    "[r]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.defaultIndentSize": 2
    },
    // ========== COLORES PERSONALIZADOS BRACKETS ==========
    "workbench.colorCustomizations": {
        "editorBracketHighlight.foreground1": "#ffd700",
        "editorBracketHighlight.foreground2": "#da70d6",
        "editorBracketHighlight.foreground3": "#87ceeb",
        "editorBracketHighlight.foreground4": "#ffa500",
        "editorBracketHighlight.foreground5": "#98fb98",
        "editorBracketHighlight.foreground6": "#ff6347",
        "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
    },
    "git.autofetch": true
}
